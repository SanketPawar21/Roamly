<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRootMyTrip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Top row: location + heart save button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nashik Panchvati"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveTripMy"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"/>
        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvDate"
            android:text="Date: 13/11/2025"
            android:textSize="14sp"
            android:textColor="@color/Primary_Text"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvPeople"
            android:text="People Needed: 4"
            android:textColor="@color/textPrimary"
            android:textSize="14sp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvStatus"
            android:text="Status: Open"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_gradient"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/tvRole"
            android:text="Host"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:paddingTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/viewDetailsBtn"
                android:text="View Details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"/>


            <Button
                android:id="@+id/btnLeaveTrip"
                android:text="Leave Trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/Warm_Yellow"
                android:textColor="@color/Primary_Text"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
